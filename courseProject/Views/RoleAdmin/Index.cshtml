@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div><h4>Roles</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table calss="table table-condensed table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th></th></tr>
    @if(Model.Count() == 0) { <tr><td colspan="4" class="text-center">No Roles</td></tr> }
    else
    {
        foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role = "@role.Id"></td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    }
</table>
<a calss="btn btn-primary" asp-action="Create">Create</a>
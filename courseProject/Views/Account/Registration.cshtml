@model CreateUserModel

<div class="bg-primary panel-body"><h4>Create User</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="Account" asp-action="Registration" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input required="required" asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input required="required" type="password" asp-for="Password" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="RepitePassword"></label>
        <input required="required" type="password" asp-for="RepitePassword" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-primary">Registration</button>
    <a asp-action="Login" class = "btn btn-default">Cancel</a>
</form>

@model IEnumerable<User>

<div><h4>Users Accaunts</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table calss="table table-condensed table-bordered">
    <form asp-action="Delete"  method="post">
        <tr><th width="30%">ID</th>
            <th width="10%">Name</th>
            <th width="20%">Email</th>
            <th width="10%">
                <input type="checkbox" id="checkAll" onClick="toggle(this)"/><span>Check All</span>
            </th>
            <th width="10%"><button type="submit" class="btn btn-sm btn-danger">Delete</button></th>
        </tr>
        @if(Model.Count() == 0) { <tr><td colspan="3" class="text-center">No User Accounts</td></tr> }
        else
        {
            @foreach(User user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td> <input type="checkbox" name="Ids" value="@user.Id"> </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    </td>
                </tr>
            }
        }
    </form>
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>
<a asp-controller="RoleAdmin" asp-action="Index" class="btn btn-primary">Administration roles</a> 

@section scripts
{
    <script>
        $(function () {
          $("#checkAll").click(function(){
              $("input[type='checkbox']").attr("checked", this.checked);
          });
        });
    </script>
}